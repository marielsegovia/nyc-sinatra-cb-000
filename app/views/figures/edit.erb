<h1> Edit Figure </h1>

<form method="POST" action="/figures/<%= @figure.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <p> Figure Name: <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"> </p>

    <p> Titles: </p>
    <% Title.all.each do |title| %>
      <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"> <%= title.name %> <% 'checked' if @figure.titles.include?(title) %>
    <% end %>

    <p> Create New Title: <input type="text" id="new_title" name="title[name]"> </p>

    <h1> Landmarks: </h1>

    <% Landmark.all.each do |landmark| %>
      <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"> <%= landmark.name %> <% 'checked' if @figure.landmarks.include?(landmark) %>
    <% end %>

    <p> Create New Landmark <input type="text" id="new_landmark" name="landmark[name]"> </p>

    <input type="submit" value="Edit Figure">

</form>
